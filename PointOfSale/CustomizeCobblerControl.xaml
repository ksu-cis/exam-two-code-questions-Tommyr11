<UserControl x:Class="ExamTwoQuestions.PointOfSale.CustomizeCobblerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamTwoQuestions.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock HorizontalAlignment="Center" FontSize="30">Customize Cobbler</TextBlock>
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding WithIceCream}"/>
                <TextBlock FontSize="20" Text="Ice Cream"/>
            </StackPanel>
            <TextBlock></TextBlock>
            <StackPanel Orientation="Vertical">
                <RadioButton GroupName="s" Name="SmallRadioButton" FontSize="10" Tag="c">Cherry</RadioButton>
                <RadioButton GroupName="s" Name="MediumRadioButton" FontSize="10" Tag="b">Blueberry</RadioButton>
                <RadioButton GroupName="s" Name="LargeRadioButton" FontSize="10" Tag="p">Peach</RadioButton>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
